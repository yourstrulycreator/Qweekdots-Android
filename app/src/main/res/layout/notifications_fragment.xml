<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creator.qweekdots.activity.MainActivity"
    android:background="@color/contentBodyColor">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/activity_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activity_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="3dp"
        android:layout_gravity="bottom|center"
        app:tabIndicator="@drawable/tabindicator_background"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorAnimationDuration="900"
        app:tabRippleColor="?attr/colorAccent"
        app:tabUnboundedRipple="true"
        app:tabTextColor="@color/LightGrey"
        app:tabMode="fixed"
        app:tabGravity="center"
        app:tabPaddingStart="10dp"
        app:tabPaddingTop="10dp"
        app:tabPaddingEnd="10dp"
        app:tabPaddingBottom="10dp"
        app:tabPadding="10dp"
        app:tabIconTint="@drawable/selector_tab" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>