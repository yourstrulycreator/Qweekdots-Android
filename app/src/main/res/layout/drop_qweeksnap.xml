<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBodyColor"
    android:padding="0dp">
    <RelativeLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="0dp">
        <SurfaceView
            android:id="@+id/preview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/img_flash_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:src="@drawable/ic_flash_off_shadow_48dp"
            android:layout_marginBottom="85dp"
            android:clickable="true"
            android:onClick="FlashControl"
            android:layout_alignParentEnd="true"
            android:focusable="true"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/snap" />

        <ImageView
            android:id="@+id/img_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:src="@drawable/ic_camera_switch_shadow_48dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/snap" />

        <com.creator.qweekdots.utils.CircleProgressBar
            android:id="@+id/custom_progressBar"
            android:layout_height="80dp"
            android:layout_width="80dp"
            app:progress="0"
            app:progressBarThickness="7dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/img_upload_media"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="@drawable/qweeksnap_upload_photo"
            app:srcCompat="@drawable/ic_art"
            android:tint="@color/white"
            android:layout_marginBottom="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:contentDescription="@string/snap" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/edit_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.creator.qweekdots.qweekcamera.StickerView
                android:id="@+id/sticker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:showBorder="true"
                app:showIcons="true"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/captured_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/black"
                    android:layout_gravity="center"
                    android:contentDescription="@string/snap"
                    android:adjustViewBounds="true"/>
            </com.creator.qweekdots.qweekcamera.StickerView>

            <com.creator.qweekdots.qweekcamera.StickerView
                android:id="@+id/sticker_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:showBorder="true"
                app:showIcons="true"
                android:background="@color/black">
                <VideoView
                    android:id="@+id/captured_video"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center" />
            </com.creator.qweekdots.qweekcamera.StickerView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cancel_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_shadow_48dp"
                    android:padding="3dp"
                    android:contentDescription="@string/snap" />
                <ImageView
                    android:id="@+id/add_stickers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-8dp"
                    android:src="@drawable/ic_smile_shadow_48dp"
                    android:padding="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="75dp"
                    android:contentDescription="@string/snap" />
                <ImageView
                    android:id="@+id/add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_text_shadow_48dp"
                    android:padding="3dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/snap" />
                <ImageView
                    android:id="@+id/add_draw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_graffiti_shadow_48dp"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:contentDescription="@string/snap" />
                <ImageView
                    android:id="@+id/save_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_download_shadow_48dp"
                    android:padding="5dp"
                    android:layout_marginBottom="-5dp"
                    android:clickable="true"
                    android:onClick="saveMedia"
                    android:focusable="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/snap" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp">
                    <com.github.jorgecastilloprz.FABProgressCircle
                        android:id="@+id/dropSnapProgress"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:padding="10dp"
                        app:arcColor="@color/Red"
                        app:arcWidth="5dp"
                        app:reusable="true">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/upload_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            app:srcCompat="@drawable/ic_send"
                            app:layout_behavior="com.google.android.material.floatingactionbutton.FloatingActionButton$Behavior"
                            android:focusable="true"
                            app:pressedTranslationZ="12dp"
                            app:backgroundTint="@color/Yellow"
                            android:scaleType="centerCrop"
                            android:elevation="0dp"
                            app:elevation="0dp"
                            tools:ignore="VectorDrawableCompat"
                            tools:targetApi="lollipop" />

                    </com.github.jorgecastilloprz.FABProgressCircle>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/editTextLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/translucent_black_bg"
                android:gravity="center"
                android:onClick="showHideEditText"
                android:clickable="true"
                android:visibility="gone"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|center"
                    android:layout_marginStart="0dp">
                    <SeekBar
                        android:id="@+id/seekbar_font"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"/>
                    <View
                        android:id="@+id/colorSelected"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="0dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@android:color/transparent"
                    android:textSize="30sp"
                    android:importantForAutofill="no"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_sticker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#E13D3D3D"
                android:visibility="gone">
                <GridView
                    android:id="@+id/sticker_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdge="none"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:focusable="false"
                    android:numColumns="3"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="none"
                    android:stretchMode="spacingWidthUniform"
                    android:columnWidth="100dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/hide_sticker_options"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="-50dp"
                    android:text="@string/cancel_txt"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>