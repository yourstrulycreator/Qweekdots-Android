<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creator.qweekdots.activity.MainActivity"
    android:background="@color/contentBodyColor"
    android:id="@+id/postFrame">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            tools:targetApi="lollipop"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q"
                android:fontFamily="@font/odin_rounded_bold"
                android:textSize="40sp"
                android:textColor="@color/QweekColorAccent"/>

        </androidx.appcompat.widget.Toolbar>


        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:layout_marginTop="50dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/id_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </FrameLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/id_tabs"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:elevation="3dp"
            android:layout_gravity="bottom|center"
            app:tabIndicator="@drawable/tabindicator_background"
            app:tabIndicatorColor="@color/QweekColorAccent"
            app:tabIndicatorGravity="bottom"
            app:tabIndicatorAnimationDuration="900"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabPadding="1dp"
            app:tabIconTint="@color/tab_icon_selector"
            app:tabTextAppearance="@style/AppTheme.Headlines.TabTextAppearance"
            app:tabTextColor="@color/tab_icon_selector"
            app:tabRippleColor="@null" />

        <com.creator.qweekdots.utils.CircleProgressBar
            android:id="@+id/dropBtn"
            android:layout_height="55dp"
            android:layout_width="55dp"
            app:progress="100"
            app:progressBarThickness="5dp"
            app:progressbarColor="@color/QweekColorAccent"
            android:layout_gravity="center"
            android:layout_marginBottom="55dp"
            android:scaleType="fitCenter"
            app:layout_anchor="@id/main_container"
            app:layout_anchorGravity="bottom|center"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
