<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    style="@style/parent.contentLayout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/postText"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/drop_post_round_btn"
                                android:backgroundTint="@color/gradientOrange"
                                app:srcCompat="@drawable/q_text"
                                android:clickable="true"
                                android:focusable="true"
                                tools:targetApi="lollipop"
                                android:contentDescription="@string/drop"
                                android:padding="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/postSnap"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/drop_post_round_btn"
                                android:backgroundTint="@color/gradientLightOrange2"
                                app:srcCompat="@drawable/ic_photo_camera_black_18dp"
                                android:clickable="true"
                                android:focusable="true"
                                tools:targetApi="lollipop"
                                android:contentDescription="@string/drop"
                                android:padding="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/postAudio"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/drop_post_round_btn"
                                android:backgroundTint="@color/SkyBlue"
                                app:srcCompat="@drawable/q_audio"
                                android:clickable="true"
                                android:focusable="true"
                                tools:targetApi="lollipop"
                                android:contentDescription="@string/drop"
                                android:padding="20dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/search_spaces"
                            android:layout_width="0dp"
                            android:hint="@string/find_a_space"
                            android:textColorHint="@color/Ivory"
                            android:backgroundTint="@color/SlateGray"
                            android:background="@drawable/searchbar"
                            android:textColor="@color/white"
                            android:inputType="textCapWords"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:layout_height="40dp"
                            tools:targetApi="lollipop"
                            android:importantForAutofill="no"
                            android:fontFamily="@font/montserrat_regular"/>

                    </LinearLayout>

                    <TextView
                        style="@style/viewParent.headerText.settingsTextIcon"
                        android:drawableLeft="@drawable/ic_edit_password"
                        android:layout_marginTop="10dp"
                        android:text="Your Spaces"
                        android:textColor="@color/contentTextColor"
                        android:drawableStart="@drawable/ic_edit_password"
                        android:id="@+id/liked_spacesBtn"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:drawableRight="@drawable/flame"
                        android:id="@+id/more_spaces"
                        android:drawableEnd="@drawable/flame" />

                    <com.creator.qweekdots.view.StaggeredGridView
                        android:id="@+id/spaces_grid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="45dp"
                        android:paddingTop="@dimen/activity_margin_content"
                        android:paddingBottom="@dimen/activity_margin_content"/>

                    <RelativeLayout
                        android:id="@+id/footer"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="@dimen/padding_normal" >

                        <com.github.ybq.android.spinkit.SpinKitView
                            android:id="@+id/spaceProgress"
                            style="@style/SpinKitView.Small.ChasingDots"
                            android:layout_width="@dimen/progress_width"
                            android:layout_height="@dimen/progress_height"
                            android:layout_gravity="center"
                            app:SpinKit_Color="@color/QweekColorAccent" />

                        <include layout="@layout/qweekdots_error" />
                        <include layout="@layout/qweekdots_empty" />

                    </RelativeLayout>

                </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
