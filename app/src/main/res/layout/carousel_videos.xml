<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="428dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="-24.5dp"
    android:layout_marginLeft="-24.5dp">

    <ImageView
        android:id="@+id/ivFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:background="@drawable/list_bg_red"
        android:contentDescription="@string/snap"/>

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="340dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="18dp"
        tools:background="@android:color/background_dark"
        android:id="@+id/ivVideo"
        app:cardElevation="2dp">

        <com.creator.qweekdots.mediaplayer.RSVideoPlayerStandard
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvVideoTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/ivVideo"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:gravity="center" />

</RelativeLayout>