<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/optTitleSheetTxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/contentTextColor"
                android:text="Pick Media"
                android:fontFamily="@font/amatic_regular"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="55dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/pickPhoto"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginRight="65dp"
                    android:background="@drawable/drop_post_round_btn"
                    android:backgroundTint="@color/gradientOrange"
                    app:srcCompat="@drawable/ic_photo_camera"
                    android:clickable="true"
                    android:focusable="true"
                    tools:targetApi="lollipop"
                    android:contentDescription="@string/drop"
                    android:padding="20dp"/>

                <ImageView
                    android:id="@+id/pickVideo"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@drawable/drop_post_round_btn"
                    android:backgroundTint="@color/gradientLightBlue"
                    app:srcCompat="@drawable/ic_video_camera"
                    android:clickable="true"
                    android:focusable="true"
                    tools:targetApi="lollipop"
                    android:contentDescription="@string/drop"
                    android:padding="20dp"/>

            </LinearLayout>

            <View
                android:id="@+id/extraSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>