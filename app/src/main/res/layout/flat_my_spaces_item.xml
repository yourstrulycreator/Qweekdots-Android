<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ring_content"
    android:layout_width="130dp"
    android:layout_height="105dp"
    app:cardBackgroundColor="#FF402D"
    app:cardCornerRadius="0dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="0dp"
    style="@style/PanelChildHorizontalScrollViewItem" >

    <ImageView
        android:id="@+id/art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:background="@drawable/scrim">

        <com.creator.qweekdots.grid.util.DynamicHeightTextView
            android:id="@+id/ringnameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/montserrat_regular"
            app:textAllCaps="true"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/AntiqueWhite"
            android:textAlignment="center"
            tools:ignore="SpUsage" />

    </LinearLayout>

</androidx.cardview.widget.CardView>