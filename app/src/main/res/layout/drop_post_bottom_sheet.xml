<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/optTitleSheetTxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/contentTextColor"
                android:text="The Drops Factory"
                android:fontFamily="@font/amatic_regular"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="30dp">
                    <ImageView
                        android:id="@+id/postText"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/drop_post_round_btn"
                        android:backgroundTint="@color/gradientOrange"
                        app:srcCompat="@drawable/q_text"
                        android:clickable="true"
                        android:focusable="true"
                        tools:targetApi="lollipop"
                        android:contentDescription="@string/drop"
                        android:padding="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="30dp">
                    <ImageView
                        android:id="@+id/postSnap"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/drop_post_round_btn"
                        android:backgroundTint="@color/gradientLightOrange2"
                        app:srcCompat="@drawable/ic_photo_camera_black_18dp"
                        android:clickable="true"
                        android:focusable="true"
                        tools:targetApi="lollipop"
                        android:contentDescription="@string/drop"
                        android:padding="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QweekSnaps"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/postAudio"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/drop_post_round_btn"
                        android:backgroundTint="@color/SkyBlue"
                        app:srcCompat="@drawable/q_audio"
                        android:clickable="true"
                        android:focusable="true"
                        tools:targetApi="lollipop"
                        android:contentDescription="@string/drop"
                        android:padding="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QweekAudio"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/extraSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>